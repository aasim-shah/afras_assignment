<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <title>Afras Assignment</title>
    <style>
      td{
        font-size: 16px;
        font-weight: 400;
      }
    .border-b{
      border: 2px solid #007bffa8!important;
      border-radius: 1rem;
      width: 78%;
      margin: 0px auto;
     padding: 9px 18px;
    }
    .ml-10{
      margin-left: 4rem;
    }
   
@media only screen and (max-width: 450px) {
  .text-sm{
    font-size:18px ;

  }
  .w-sm{
    width: 94% !important;
  }

}
        
    </style>
  </head>
  <body class="">
    <section id="input&search">
        <div
      class="d-flex justify-content-center align-items-center flex-column my-4"
    >
      <h2 class="text-sm text-primary">Welcome to Afras's Music App</h2>
      <div class="w-50 w-sm mx-auto my-4">
      <form action="/search" method="post">
        <div class="d-flex  flex-column justify-content-center mb-3">
          <input
            type="text"
            class="border-b"
            name="searchTerm"
            required
            value="<%= searchTerm %>"
            placeholder="Search For you Fav Artist / Song / Brand ...."
            aria-label="Search For you Fav Artist / Song / Brand ...."
            aria-describedby="button-addon2"
          />
          <div class="d-flex flex-row mt-1 ml-10">
            <input type="checkbox" id="checkbox" name="checkBox"  class="px-3 mt-2" />
            <label class="text-primary  ml-2 mt-2 " for="checkbox"
              >Want To show  Album Cover ?
            </label>
          </div>
          <div class="input-group-append d-flex  rounded-lg ">
            <button
              class="btn btn-primary w-50 mx-auto mt-4 font-weight-bold text-light"
              type="submit"
              id="button-addon2"
            >
              Search Artist
            </button>
          </div>
        </div>


    </form>
      </div>
    </div>
    </section>

    <% if(data){ %>
    <section id="show_results">
        <div class="alert-primary font-weight-bold w-75 w-sm mx-auto pt-1 pb-3 px-2 rounded-lg">
            <p >Results Found  : (<% if(data.resultCount > 10){ %> <small>10</small> <% } %><% if(data.resultCount < 10){ %> <%= data.resultCount %> <% } %>  )</p>
            <table class="table table-primary">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <% if(checkBox){ %>
                    <th scope="col">Cover</th>
                    <%}%>
                    <th scope="col">Artist Name </th>
                  <th scope="col">Song Name </th>
                </tr>
              </thead>
           
              <% data.results.forEach((item , index) => { %>
                <% if(index < 10 ) { %>
                  <tbody>
                    <tr>
                      <td scope="row"><%= index %></td>
                      <% if(checkBox){ %>
                        <td >
                          <img src=" <%= item.artworkUrl100 %>" style="width: 70px ; height: 70px;" alt="">
                        </td>
                        <%}%>
                        <td><%= item.artistName %></td>
                        <td><%= item.trackName %></td>
                    </tr>
                  </tbody>
                  <% } %>
                  <% }) %>
                </table>
        </div>
        
    </section>

    <% } %>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>

